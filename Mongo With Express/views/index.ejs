<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WhatsApp</title>
    <link rel="stylesheet" href="style.css">
</head>

<body>

    <form method="get" action="/chats/new">
        <button>New Chat</button>
    </form>

<% for(let chat of chats){%>
<div class="chat">
    <p>From: <%=chat.from%>
    </p>
    <div class="msg">
        <p>
            <%=chat.msg%>
        </p>
    </div>
    <p>Recived by: <%=chat.to%>
    </p>
    <p><%=chat.created_at.toString().split(" ")[4]%>
    </p>
    <p><%=chat.created_at.toString().split(" ").slice(0,4).join("-")%>
    </p>
    <form method="get" action="/chats/edit/<%=chat._id%>">
        <button>Edit</button>
    </form>
    <form method="post" action="/chats/<%=chat._id%>?_method=Delete">
        <button>Delete</button>
    </form>
</div>
<%}%>

</body>

</html>
